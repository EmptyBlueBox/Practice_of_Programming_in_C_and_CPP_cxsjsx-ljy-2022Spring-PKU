int strcmp(const char* s1, const char* s2)
{
	for (int i = 0; s1[i] && s2[i]; ++i) {
		if (s1[i] < s2[i])
			return -1;
		else if (s1[i] > s2[i])
			return 1;
	}
	return 0;
}
//void strcat(char* d, const char* s)
//{
//	int len = strlen(d);
//	strcpy(d + len, s);
//}
class MyString
{
	// 在此处补充你的代码
	char a[110] = { 0 };
public:
	MyString() {};
	MyString(const char* p)
	{
		for (int i = 0; i < strlen(p); i++)
			a[i] = p[i];
	}
	MyString(const char p)
	{
		a[0] = char(p);
	}
	MyString(const MyString& p)
	{
		for (int i = 0; i < strlen(p.a); i++)
			a[i] = p.a[i];
	}
	friend ostream& operator<<(ostream& os, MyString a)
	{
		cout << a.a;
		return os;
	}
	int operator<(MyString p)
	{
		if (strcmp(this->a, p.a) == -1)
			return true;
		else
			return false;
	}
	int operator==(MyString p)
	{
		if (strcmp(this->a, p.a) == 0)
			return true;
		else
			return false;
	}
	int operator>(MyString p)
	{
		if (strcmp(this->a, p.a) == 1)
			return true;
		else
			return false;
	}
	MyString& operator=(MyString p)
	//重载赋值：参数为MyString,其它类型通过复制构造函数进行强制类型转换
	{
		for (int i = 0; i < strlen(p.a); i++)
			a[i] = p.a[i];
		return *this;
	}
	friend MyString operator+(MyString a, MyString b)
	{
		MyString tmp(a);
		strcat(tmp.a, b.a);
		return tmp;
	}
	friend MyString operator+=(MyString& a, MyString b)
	{
		a = a + b;
		return a;
	}
	char& operator[](int n)
	{
		return a[n];
	}
	MyString operator()(int x, int l)
	{
		MyString ans;
		for (int i = x; i <= x + l - 1; i++)
			ans[i - x] = a[i];
		return ans;
	}
	// 在此处补充你的代码
};


int CompareString(const void* e1, const void* e2)
{
	MyString* s1 = (MyString*)e1;//传入参数无类型
	MyString* s2 = (MyString*)e2;
	if (*s1 < *s2)
		return -1;
	else if (*s1 == *s2)
		return 0;
	else if (*s1 > *s2)
		return 1;
}
int main()
{
	MyString s1("abcd-"), s2, s3("efgh-"), s4(s1);
	MyString SArray[4] = { "big","me","about","take" };
	cout << "1. " << s1 << s2 << s3 << s4 << endl;
	s4 = s3;
	s3 = s1 + s3;
	cout << "2. " << s1 << endl;
	cout << "3. " << s2 << endl;
	cout << "4. " << s3 << endl;
	cout << "5. " << s4 << endl;
	cout << "6. " << s1[2] << endl;
	s2 = s1;
	s1 = "ijkl-";
	s1[2] = 'A';
	cout << "7. " << s2 << endl;
	cout << "8. " << s1 << endl;
	s1 += "mnop";
	cout << "9. " << s1 << endl;
	s4 = "qrst-" + s2;
	cout << "10. " << s4 << endl;
	s1 = s2 + s4 + " uvw " + "xyz";
	cout << "11. " << s1 << endl;
	qsort(SArray, 4, sizeof(MyString), CompareString);
	for (int i = 0; i < 4; i++)
		cout << SArray[i] << endl;
	//s1的从下标0开始长度为4的子串
	cout << s1(0, 4) << endl;
	//s1的从下标5开始长度为10的子串
	cout << s1(5, 10) << endl;
	return 0;
}
